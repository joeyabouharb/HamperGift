@model UserCartViewModel
@{
    ViewData["Title"] = "Cart";
}

<h2>@User.Identity.Name's Cart</h2>
<div class="container">

	<div class="d-flex flex-column">

		<div class="d-flex flex-row justify-content-between bg-white rounded shadow m-2">
			@{ 
				for(int i = 0; i < Model.HamperName.Count(); i++)
				{


					<div>
						@Model.HamperName.ElementAt(i)
					</div>
					<div>
						@Model.Cost.ElementAt(i)
					</div>
					<div>
						@Model.Quantity.ElementAt(i)
					</div>
			
						}
					}
				
		</div>


	</div>



</div>
