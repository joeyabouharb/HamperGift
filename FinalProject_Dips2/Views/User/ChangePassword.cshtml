@model UserPasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";

}

<h2 class="text-center">ChangePassword</h2>
<div class="row justify-content-center p-3">

    <form class="w-75 card p-3" method="post" asp-controller="User" asp-action="ChangePassword">
        <div asp-validation-summary="ModelOnly"></div>
        
        <div class="form-group">
            <label asp-for="@Model.OldPassword"></label>
            <input asp-for="@Model.OldPassword" class="form-control">
            <span asp-validation-for="OldPassword"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.NewPassword"></label>
            <input asp-for="@Model.NewPassword" class="form-control">
            <span asp-validation-for="NewPassword"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.ConfirmNewPass">Remember Me</label>
            <input class="form-check" asp-for="@Model.ConfirmNewPass" />
            <span asp-validation-for="ConfirmNewPass"></span>
        </div>
        <div class="form-check-group">
            <button class="col-auto btn btn-primary mr-2" type="submit">Change</button>
            @Html.AntiForgeryToken()
            <button class="col-auto btn btn-danger" type="button" onclick="history.go(-1)">Go Back</button>
        </div>
    </form>


</div>
