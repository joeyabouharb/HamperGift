@model AdminCategoryAddViewModel
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <h2>Add Category:</h2>
    
    <form asp-action="AddCategory" asp-controller="Admin" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="@Model.CategoryName"></label>
            <input class="form-control" asp-for="@Model.CategoryName" />
            <span asp-validation-for="CategoryName"></span>
        </div>
        @Html.AntiForgeryToken()
        <button class="btn btn-secondary" type="submit">Submit</button>


    </form>

</div>


