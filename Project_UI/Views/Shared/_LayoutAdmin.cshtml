<!DOCTYPE html>

<html>
<head>

    <title>@ViewBag.Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/libraries/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/libraries/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/static/css/nav.css" rel="stylesheet" />
</head>
<body class="">

    <div id="wrapper">
        <partial name="_AdminNav" />
        <div class="d-flex flex-row justify-content-between bg-dark text-light pt-3 pb-3">
            <div class="d-flex flex-row">
                <a href="#menu-toggle" class="btn btn-secondary ml-2" id="menu-toggle"><i class="fa fa-bars"></i></a>

            </div>


            <h4 class="col-auto">Admin Profile: @User.Identity.Name</h4>
        </div>
        <div id="page-content-wrapper">@RenderBody()</div>

    </div>
    <script src="~/libraries/jquery/jquery.js"></script>
    <script src="~/libraries/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
    <script>

        $("#menu-toggle").click(function (e) {

            e.preventDefault();

            $("#wrapper").toggleClass("toggled");

        });

    </script>





</body>
</html>
