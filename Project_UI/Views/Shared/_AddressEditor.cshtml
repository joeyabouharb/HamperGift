@model UserDetailsViewModel

<div class="row justify-content-center">
	<form asp-action="UpdateAddressDetails" asp-controller="User" asp-route-id="@Model.AddressId" method="get">
		<div class="d-flex flex-column">
			<div class="form-group justify-content-center bg-white p-3 shadow-sm">
				<label asp-for="@Model">

				</label>
				<select class="custom-select" asp-for="AddressId" asp-items="@Model.Addresses"></select>
				
				<div class="row form-group justify-content-center">
					<button class="btn btn-primary m-3" type="submit">Edit</button>
					@Html.ActionLink("Add New Address", "AddNewAddress", "User", new object { }, new { @class = "btn btn-primary m-3" })

				</div>
			</div>


		</div>
	</form>

</div>